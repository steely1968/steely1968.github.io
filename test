<div class="service">
<label>Fence (£2.50 / m²)</label>
<input type="number" id="fence" placeholder="m²">
</div>

<button onclick="calculateTotal()">Calculate Price</button>

<div class="total" id="total">Total: £0.00</div>
<div class="note">£45 minimum call-out fee applies</div>
</div>

<script>
function calculateTotal() {
const prices = {
driveway: 3,
roof: 5,
patio: 3.5,
walls: 4,
conservatory: 6,
fence: 2.5
};

const minimumFee = 45;
let total = 0;

for (let service in prices) {
const value = document.getElementById(service).value;
if (value) {
total += value * prices[service];
}
}

if (total > 0 && total < minimumFee) {
document.getElementById("total").innerText =
"Total: £" + minimumFee.toFixed(2) + " (minimum charge)";
} else {
document.getElementById("total").innerText =
"Total: £" + total.toFixed(2);
}
}
</script>
  
