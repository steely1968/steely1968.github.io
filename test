<script>
function calculateTotal() {
const prices = {
driveway: 3,
roof: 5,
patio: 3.5,
walls: 4,
conservatory: 6,
fence: 2.5
};

const minimumFee = 45;
let total = 0;

for (let service in prices) {
const value = Number(document.getElementById(service).value) || 0;
total += value * prices[service];
}

document.getElementById("total").innerText =
total > 0 && total < minimumFee
? `Total: Â£${minimumFee.toFixed(2)} (minimum charge)`
: `Total: Â£${total.toFixed(2)}`;
}
</script>

