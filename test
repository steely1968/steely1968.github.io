<!-- âœ… QUOTE CALCULATOR SCRIPT -->
<script>
let surfaceCount = 0;
const surfacePrices = {
"Driveway": 15,
"Patio": 12,
"Decking": 10,
"Wall": 8,
"Fence": 8
};

const surfacesContainer = document.getElementById("surfacesContainer");
const addSurfaceBtn = document.getElementById("addSurfaceBtn");
const getQuoteBtn = document.getElementById("getQuoteBtn");
const quoteOutput = document.getElementById("quoteOutput");

function createSurfaceForm() {
surfaceCount++;
const div = document.createElement("div");
div.className = "surfaceForm";
div.innerHTML = `
<h3>Surface ${surfaceCount}</h3>
<label>Surface Type:
<select class="surfaceType">
<option value="Driveway">Driveway</option>
<option value="Patio">Patio</option>
<option value="Decking">Decking</option>
<option value="Wall">Wall</option>
<option value="Fence">Fence</option>
</select>
</label>
<br><br>
<label>Length (m):
<input type="number" class="length" min="0" step="0.1" required>
</label>
<br><br>
<label>Width (m):
<input type="number" class="width" min="0" step="0.1" required>
</label>
<br><br>
<label>Notes (optional):
<input type="text" class="notes" placeholder="Any special details">
</label>
<br><br>
<button type="button" class="removeSurfaceBtn" style="background:#fff;color:#000;border:2px solid #000;padding:6px 12px;border-radius:6px;cursor:pointer;">Remove Surface</button>
`;
surfacesContainer.appendChild(div);

div.querySelector(".removeSurfaceBtn").addEventListener("click", () => {
surfacesContainer.removeChild(div);
surfaceCount--;
updateAddButton();
});

updateAddButton();
}

function updateAddButton() {
if(surfaceCount === 0) {
addSurfaceBtn.textContent = "Add Surface";
} else {
addSurfaceBtn.textContent = `Add ${ordinal(surfaceCount+1)} Surface`;
}
}

function ordinal(n) {
const s=["th","st","nd","rd"], v=n%100;
return n + (s[(v-20)%10]||s[v]||s[0]);
}

addSurfaceBtn.addEventListener("click", createSurfaceForm);

getQuoteBtn.addEventListener("click", () => {
const forms = document.querySelectorAll(".surfaceForm");
if(forms.length === 0){
alert("Please add at least one surface to get a quote.");
return;
}

let totalPrice = 0;
let summary = "<h2 style='text-align:center;'>Your Pressure Washing Quote</h2>";

forms.forEach((form, index) => {
const type = form.querySelector(".surfaceType").value;
const length = parseFloat(form.querySelector(".length").value) || 0;
const width = parseFloat(form.querySelector(".width").value) || 0;
const notes = form.querySelector(".notes").value;

const area = length * width;
const price = area * surfacePrices[type];
totalPrice += price;

summary += `
<p><strong>Surface ${index+1}:</strong> ${type} - ${length}m Ã— ${width}m = ${area.toFixed(1)}mÂ²<br>
${notes ? "Notes: " + notes + "<br>" : ""}Estimated Price: Â£${price.toFixed(2)}</p>
`;
});

summary += `<h3>Total Estimated Price: Â£${totalPrice.toFixed(2)}</h3>`;
summary += `<p style="font-style:italic;">Thank you! Your quote includes all surfaces you've added. You can adjust measurements or add more surfaces if needed.</p>`;

quoteOutput.innerHTML = summary;
});
</script>

