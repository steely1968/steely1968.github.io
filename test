<script>
function calculateTotal() {
const minimumFee = 45;
let total = 0;

total += (Number(drivewayLength.value) || 0) *
(Number(drivewayWidth.value) || 0) * 3;

total += (Number(roof.value) || 0) * 5;

total += (Number(patioLength.value) || 0) *
(Number(patioWidth.value) || 0) * 3.5;

total += (Number(wallsLength.value) || 0) *
(Number(wallsHeight.value) || 0) * 4;

total += (Number(conservatory.value) || 0) * 6;

total += (Number(fenceLength.value) || 0) *
(Number(fenceHeight.value) || 0) * 2.5;

const totalEl = document.getElementById("total");

if (total === 0) {
totalEl.innerText = "Enter measurements to see price";
return;
}

const finalTotal = total < minimumFee ? minimumFee : total;

totalEl.innerText =
total < minimumFee
? `Total: £${finalTotal.toFixed(2)} (minimum charge)`
: `Total: £${finalTotal.toFixed(2)}`;
}
</script>

  
